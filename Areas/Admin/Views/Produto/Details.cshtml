@model App.Models.Produto

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1 class="fs-1" style="font-family: fantasy;">Informações</h1>

    <div>
        <h4>Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NomeProduto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomeProduto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preco)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preco)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Foto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Foto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EmEstoque)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EmEstoque)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.ProdutoID" class="text-dark">Editar</a> |
        <a asp-action="Index" class="text-dark">Voltar à lista</a>
    </div>
</div>