@model App.Models.Usuario
@{
ViewData["Title"] = "Login";
}
<h1 class="text-center fs-1" style="font-family: Fantasy">Login do administrador</h1>
<hr />
<div class="container col-12 col-lg-6">
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" placeholder="Insira o seu usuário" class="form-control mb-3" />
            <span asp-validation-for="Login" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input type="password" asp-for="Senha" placeholder="Insira a sua senha" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
        <p class="text-danger">@ViewBag.ErrorMessage</p>
        }
        <div class="form-group d-flex text-center mt-5">
            <input type="submit" value="Entrar" class="btn btn-dark" />
        </div>

        <div class="mt-3">
        <p>Esqueceu sua senha? <a href="#">Clique aqui</a> para recuperá-la. </p>
        </div>
    </form>
</div>